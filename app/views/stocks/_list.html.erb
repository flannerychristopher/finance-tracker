<div>
  <% @user_stocks.each do |stock| %>

    <div class='well'>
    
      <%= stock.name %>,
      <br /><%= stock.ticker %>
      <br /><%= stock.last_price %>

      <% if @user.id == current_user.id %>
        <%= link_to 'delete', user_stock_path(stock), 
              method: :delete,
              data: { confirm: 'Are you sure?' }, 
              class: 'btn btn-xs btn-danger' 
        %>
      <% end %>
    </div>
  <% end %>
</div>