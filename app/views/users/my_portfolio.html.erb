<h1>My Portfolio</h1>

<h3>Search for Stocks:</h3>

<div id='stock-lookup' class='row'>
  <%= form_tag search_stocks_path,  remote: true, 
                                    method: :get, 
                                    id: 'stock-lookup-form' do %>
    <div class='form-group row no-padding text-center col-md-12'>
      <div class='col-md-10'>
        <%= text_field_tag  :stock, 
                            params[:stock], 
                            placeholder: 'stock ticker symbol', 
                            autofocus: true,
                            class: 'form-control search-box input-lg'
        
        %>
      </div> <!-- col -->
      
      <div class='col-md-2'>
        <%= button_tag type: :submit, class: 'btn btn-lg btn-success' do %>
          <span class='glyphicon glyphicon-search'></span>
        <% end %>
      </div> <!-- col -->

    </div> <!-- form-group -->
  <% end %>
</div> <!-- stock-lookup -->

<div id='stock-result' class='row'>
  <%= render 'users/result' %>
</div> 

<div id='stock-list' class='row'>
  <%= render 'stocks/list' %>
</div>